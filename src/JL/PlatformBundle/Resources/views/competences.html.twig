{# src/JL/PlatformBundle/Resources/views/index.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock title %}

{% block bsFile %}
    {{ parent() }}
{% endblock bsFile %}

{% block contentBody %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4 style="float: left;">
                    <i class="fa fa-terminal" aria-hidden="true"></i><strong id="title-page"></strong>
                    <em class="text-muted" style="font-size: 0.6em;">Ce que je maîtrise</em>
                </h4>
            </div>
        </div>
        <div class="row mt-2 ml-2">
            <div class="col-lg-12">
                <h5 style="float: left;">
                    <i class="fa fa-globe" aria-hidden="true"></i><strong> Techno</strong>
                    <em class="text-muted" style="font-size: 0.6em;">Les différentes technologies</em>
                </h5>
            </div>
        </div>
        {{ include('@JLPlatform/competences/technos.html.twig') }}

        <hr class="separator-row">

        <div class="row mt-3 ml-2">
            <div class="col-lg-12">
                <h5 style="float: left;">
                    <i class="fa fa-hdd-o" aria-hidden="true"></i><strong> Hardware</strong>
                    <em class="text-muted" style="font-size: 0.6em;">Les logiciels et supports</em>
                </h5>
            </div>
        </div>
        {{ include('@JLPlatform/competences/hardware.html.twig') }}
    </div>
    <hr class="separator-footer">
    {{ include('@JLPlatform/footer.html.twig') }}
{% endblock contentBody %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function(){
            var str1 = " Mes compétences";

            var showText = function( target, message, index, interval ){
                if ( index < message.length ){
                    $( target ).append( message[ index++ ] );

                    setTimeout( function(){
                        showText( target, message, index, interval);
                    }, interval);
                }
            };

            showText("#title-page", str1, 0, 100);
        });
    </script>
{% endblock javascripts %}
